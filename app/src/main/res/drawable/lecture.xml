<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
            <gradient android:angle="270" android:endColor="#000011" android:startColor="#111111" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="15dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />

        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <padding android:bottom="2dp" android:left="4dp" android:right="4dp" android:top="2dp" />
            <solid android:color="#222231" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="15dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
        </shape>
    </item>
</selector>